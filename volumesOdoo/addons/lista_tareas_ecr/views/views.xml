<odoo>
  <data>
    <!-- Definimos como es la vista explicita de la litas-->
    <record model="ir.ui.view" id="lista_tareas_ecr.list">
      <field name="name">lista_tareas_ecr list</field>
      <field name="model">lista_tareas_ecr.lista_tareas_ecr</field>
      <field name="arch" type="xml">
        <tree>
          <field name="tarea"/>
          <field name="prioridad"/>
          <field name="urgente"/>
          <field name="realizada"/>
          <field name="fecha_limite"/>
        </tree>
      </field>
    </record>

    <!-- Acciones al abrir las vistas en los modelos
https://www.odoo.com/documentation/17.0/developer/reference/addons/actions.html
-->
    <record model="ir.actions.act_window" id="lista_tareas_ecr.action_window">
      <field name="name">lista_tareas_ecr pendientes</field>
      <field name="res_model">lista_tareas_ecr.lista_tareas_ecr</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Listado de tareas de ECR" id="lista_tareas_ecr.menu_root"/>
    
    <!-- menu categories -->
    <menuitem name="Opciones Lista Tareas de ECR" id="lista_tareas_ecr.menu_1"
    parent="lista_tareas_ecr.menu_root"/>

    <!-- actions -->
    <menuitem name="Mostrar lista" id="lista_tareas_ecr.menu_1_list" parent="lista_tareas_ecr.menu_1"
              action="lista_tareas_ecr.action_window"/>
  </data>
</odoo>
